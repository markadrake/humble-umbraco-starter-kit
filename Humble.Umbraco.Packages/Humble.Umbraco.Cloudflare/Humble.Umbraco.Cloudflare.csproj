<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ContentTargetFolders>.</ContentTargetFolders>
        <Product>Humble.Umbraco.Cloudflare</Product>
        <PackageId>Humble.Umbraco.Cloudflare</PackageId>
        <Title>Humble.Umbraco.Cloudflare</Title>
        <Description>...</Description>
        <Product>...</Product>
        <PackageTags>umbraco plugin package</PackageTags>
        <RootNamespace>Humble.Umbraco.Cloudflare</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="10.2.1" />
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="10.2.1" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="app_plugins\humble.umbraco.cloudflare\**\*.*">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
        <None Include="build\**\*.*">
            <Pack>True</Pack>
            <PackagePath>buildTransitive</PackagePath>
        </None>
    </ItemGroup>
</Project>
